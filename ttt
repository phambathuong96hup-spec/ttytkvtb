    <script>
        function redirectToNotion() {
            const department = document.getElementById('department').value;
            const errorMessage = document.getElementById('errorMessage');
            
            if (!department) {
                errorMessage.style.display = 'block';
                return;
            }
            
            errorMessage.style.display = 'none';
            
            // L∆∞u l·ª±a ch·ªçn v√†o localStorage (t√πy ch·ªçn)
            localStorage.setItem('selectedDepartment', department);
            localStorage.setItem('selectionTime', new Date().toISOString());
            
            // Hi·ªÉn th·ªã th√¥ng b√°o chuy·ªÉn h∆∞·ªõng
            const btn = document.getElementById('continueBtn');
            btn.textContent = 'ƒêang chuy·ªÉn h∆∞·ªõng...';
            btn.disabled = true;
            
            // Chuy·ªÉn h∆∞·ªõng ƒë·∫øn trang Notion sau 1 gi√¢y
            setTimeout(() => {
                window.location.href = 'https://young-mastodon-f07.notion.site/2800bc1073c28033a764f18b145aad02';
            }, 1000);
        }
        
        // Th√™m event listener cho select
        document.getElementById('department').addEventListener('change', function() {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.style.display = 'none';
        });
        
        // Cho ph√©p nh·∫•n Enter ƒë·ªÉ ti·∫øp t·ª•c
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                redirectToNotion();
            }
        });
    </script>
